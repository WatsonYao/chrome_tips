{
  "manifest_version": 3,
  "name": "B站字幕下载器",
  "version": "1.0",
  "description": "下载B站视频字幕",
  "permissions": [
    "activeTab",
    "cookies",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://*.bilibili.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 