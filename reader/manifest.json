{
  "manifest_version": 3,
  "name": "Reader",
  "version": "1.0",
  "description": "A simple reader extension",
  "permissions": [
    "clipboardRead",
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js", "turndown.min.js"],
    "matches": ["<all_urls>"]
  }]
} 